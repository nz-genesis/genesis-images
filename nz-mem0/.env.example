# nz-mem0 Environment Variables (Example)
# Copy to .env and fill with real values

# FastAPI
HOST=0.0.0.0
PORT=8090
LOG_LEVEL=info

# Database (Postgres) - from stack-core
MEM0_DATABASE_URL=postgresql://postgres:password@postgres:5432/mem0_dev
MEM0_DATABASE_POOL_SIZE=10
MEM0_DATABASE_MAX_OVERFLOW=20

# Qdrant Vector Store
MEM0_QDRANT_URL=http://qdrant:6333
MEM0_QDRANT_API_KEY=optional_api_key

# Redis (optional)
MEM0_REDIS_URL=redis://redis:6379/0

# Embeddings
MEM0_EMBEDDING_MODEL=all-MiniLM-L6-v2
MEM0_EMBEDDING_DIMENSION=384

# Memory Store
MEM0_MEMORY_BATCH_SIZE=32
MEM0_MEMORY_SEARCH_LIMIT=10

# Optional API Security
API_KEY=your_api_key_here

# Debug mode
DEBUG=false
